<h2> 跑记列表 </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增跑记", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">产品模版图片</th>
      <th>产品名称</th>
      <th>产品价格</th>
      <th width="100">产品选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>

          <%= link_to("编辑", edit_admin_product_path(product)) %>
          <br>
          <%= link_to("删除", admin_product_path(product), :method => :delete, :data => { :confirm => "你确定要删除吗?" }) %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
